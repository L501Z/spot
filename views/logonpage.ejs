            document.getElementById(title+"x").innerText = profile2.items[i].name;
            document.getElementById(title).src = "placeholder2.png";
            count++;    
            title = `userPlay${count}`
        }
        else{
            document.getElementById(title+"x").innerText = profile2.items[i].name;
            document.getElementById(title).src = profile2.items[i].images[0].url;
            count++;    
            title = `userPlay${count}`
        }

    }
}
